@model IEnumerable<_4PsPH.Models.AccountsViewModel>

@{
    ViewBag.Title = "Accounts";
}

<div class="shadow-wrapper">
    <div class="row">
        <div class="window-heading">
            <div class="col-md-5">
                <div class="links">
                    <strong>
                        @ViewBag.Title
                    </strong>
                </div>
            </div>

            <div class="col-md-4" style="text-align:right;">
                <a href="@Url.Action("Create")" class="btn btn-info">Add Account <span class="glyphicon glyphicon-plus-sign"></span></a>
            </div>

            <div class="col-md-3" style="text-align:right;">
                <div class="input-group">
                    <input type="text" class="form-control all-search" placeholder="Search All Fields" aria-describedby="basic-addon2">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>City</th>
                <th>Role</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.City</td>
                    <td>@item.Role</td>
                    <td>
                        @if (item.IsDisabled)
                        {
                            <font style="color:#EF5350;">Disabled</font>
                        }
                        else
                        {
                            <font>Active</font>
                        }
                    </td>
                    <td style="text-align:right;">
                        @if (item.IsDisabled)
                        {
                            @Html.ActionLink("Activate","ChangeStatus", new { email = item.Email }, new { @class="btn btn-xs btn-success" })
                        }
                        else
                        {
                            @Html.ActionLink("Deactivate", "ChangeStatus", new { email = item.Email }, new { @class="btn btn-xs btn-danger" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            var datatable = $("table").DataTable({
                paging: true,
                "pageLength": 10,
                "dom": "<'row'<'table-window'<'table-responsive'rt>>><'window-footer'<'col-md-6'i><'col-md-6'p>>",
                "columnDefs": [
                    { "orderable": false, "targets": 5 }
                ]
            });

            $(".all-search").keyup(function () {
                datatable.search($(this).val()).draw();
            })
        });
    </script>
}
