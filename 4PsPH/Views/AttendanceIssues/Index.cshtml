@model IEnumerable<_4PsPH.Models.AttendanceIssue>

@{
    ViewBag.Title = "Attendance Compliance Issues";
}

<div class="shadow-wrapper">
    <div class="row">
        <div class="window-heading">
            <div class="col-md-9">
                <div class="links">
                    <strong>
                        @ViewBag.Title
                    </strong>
                </div>
            </div>

            <div class="col-md-3" style="text-align:right;">
                <div class="input-group">
                    <input type="text" class="form-control all-search" placeholder="Search All Fields" aria-describedby="basic-addon2">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    Client
                </th>
                <th>
                    Household # - Name
                </th>
                <th>
                    School
                </th>
                <th>
                    Status
                </th>
                <th>
                    Date Created
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person.GivenName)
                    </td>
                    <td>
                        @item.Person.HouseholdId - @item.Person.Household.Name
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.School.Name)
                    </td>
                    <td>
                        @if (item.IsResolved)
                        {
                            <font style="color:#3ec405">Resolved on @item.ResolvedDate.Value.ToString("MM/dd/yy")</font>
                        }else
                        {
                            <font style="color:#a4a2a2">Unresolved</font>
                        }
                    </td>
                    <td>
                        @item.DateTimeCreated.ToString("MM/dd/yy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td style="text-align:right;">
                        @if (!item.IsResolved)
                        {
                            @Html.ActionLink("Resolve", "Resolve", new { id = item.AttendanceIssueId }, new { @class = "btn btn-success btn-xs" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            var datatable = $("table").DataTable({
                paging: true,
                "pageLength": 10,
                "dom": "<'row'<'table-window'<'table-responsive'rt>>><'window-footer'<'col-md-6'i><'col-md-6'p>>",
                "columnDefs": [
                    { "orderable": false, "targets": 6 }
                ]
            });

            $(".all-search").keyup(function () {
                datatable.search($(this).val()).draw();
            })
        });
    </script>
}