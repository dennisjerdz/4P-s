@model _4PsPH.Models.CaseSummaryReport

@{
    ViewBag.Title = "Case Summary Report";
}

<div class="row">
    <div class="col-md-6 col-md-offset-2 left-ui">
        <a href="@Url.Action("Details","Tickets", new { id = Model.TicketId })" class="outside-link">« Back to Ticket Details</a>
    </div>

    <div class="col-md-2 right-ui"><button class="btn btn-info" id="default-content">Use Default Content</button></div>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <hr class="heading-cut" />
    </div>
</div>

<div class="row">
    <div class="col-md-12" style="padding:0px;">
        <div class="col-md-8 col-md-offset-2" style="padding:0px;">
            <div class="shadow-wrapper">
                <div class="row">
                    <div class="window-heading">
                        <div class="col-md-12">
                            <div class="links">
                                <strong>
                                    @ViewBag.Title &emsp;»&emsp;Case Summary Report for Ticket Number @Model.TicketId ( @Model.Ticket.Person.getFullName() )
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @using (Html.BeginForm("Create", "CaseSummaryReports", FormMethod.Post, new { @id = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.TicketId)

                            <div class="form-group" style="margin-bottom:0px;">
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="window-footer window-footer-btn">
                    <div class="col-md-12" style="text-align:right;">
                        <button class="btn btn-primary" type="submit" form="form">Create</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="hidden" id="initialize-content">
    <p><strong>I. Basic Information</strong></p>
    <table style="height: 59px;" width="504">
        <tbody>
            <tr>
                <td style="width: 244px;"><strong>Name</strong></td>
                <td style="width: 244px;">@Model.Ticket.Person.getFullName()</td>
            </tr>
            <tr>
                <td style="width: 244px;"><strong>Household ID</strong></td>
                <td style="width: 244px;">@Model.Ticket.Person.HouseholdId</td>
            </tr>
            <tr>
                <td style="width: 244px;"><strong>Status</strong></td>
                <td style="width: 244px;">
                    @if (Model.Ticket.Person.IsExcluded)
                    {
                        <text>Excluded</text>
                    }
                    else
                    {
                        <text>Active</text>
                    }
                </td>
            </tr>
            <tr>
                <td style="width: 244px;"><strong>Age</strong></td>
                <td style="width: 244px;">@Model.Ticket.Person.getAge()</td>
            </tr>
            <tr>
                <td style="width: 244px;"><strong>Gender</strong></td>
                <td style="width: 244px;">
                    @if (Model.Ticket.Person.Gender == 0)
                    {
                        <text>Female</text>
                    }else
                    {
                        <text>Male</text>
                    }
                </td>
            </tr>
            <tr>
                <td style="width: 244px;"><strong>Address</strong></td>
                <td style="width: 244px;"></td>
            </tr>
            <tr>
                <td style="width: 244px;"><strong>Educational Attainment</strong></td>
                <td style="width: 244px;">@Model.Ticket.Person.EducationalAttainment.Name</td>
            </tr>
            <tr>
                <td style="width: 244px;"><strong>Occupation</strong></td>
                <td style="width: 244px;">@Model.Ticket.Person.Occupation.Name</td>
            </tr>
        </tbody>
    </table>
    <p><strong>Family Composition</strong></p>
    <table style="height: 69px; width: 740px;" border="1" cellpadding="3">
        <tbody>
            <tr>
                <td style="width: 153px;">Name</td>
                <td style="width: 34px;">Age</td>
                <td style="width: 134px;">Relation to Grantee</td>
                <td style="width: 196px;">Educational Attainment</td>
                <td style="width: 95px;">Occupation</td>
                <td style="width: 114px;">Remarks</td>
            </tr>
            @foreach (var x in Model.Ticket.Person.Household.People.Where(p=>p.PersonId!=Model.Ticket.PersonId))
            {
                <tr>
                    <td style="width: 153px;">@x.getFullName()</td>
                    <td style="width: 34px;">@x.getAge()</td>
                    <td style="width: 134px;">@x.RelationToGrantee.Name</td>
                    <td style="width: 196px;">@x.EducationalAttainment.Name</td>
                    <td style="width: 95px;">@x.Occupation.Name</td>
                    <td style="width: 114px;"></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <p><strong>II. Presenting Problem</strong></p>
    <p>Input here</p>
    <p><strong>III. Circumstance of the Problem</strong></p>
    <p>Input here</p>
    <p><strong>IV. Background</strong></p>
    <p>Input here</p>
    <p><strong>V. Assesment and Recommendation</strong></p>
    <p>Input here</p>
</div>

@section styles{
    <style>
        .mce-panel{
            border:none !important;
        }
    </style>    
}

@section scripts{
    <script src="@Url.Content("~/Content/tinymce/tinymce.min.js")"></script>
    <script>
        tinymce.init({
            selector: '#Body',
            height: 100,
            menubar: false,
            plugins: [
              'advlist autolink lists link charmap print preview anchor',
              'searchreplace visualblocks fullscreen',
              'insertdatetime media table contextmenu table'
            ],
            toolbar: 'undo redo | insert | styleselect | bold italic | bullist numlist | link | table',
        });
    </script>

    <script>
        $("#default-content").click(function () {
            var default_content = $("#initialize-content").html();
            console.log(default_content);

            tinyMCE.activeEditor.setContent(default_content.toString());
        });
    </script>
}