@model IEnumerable<_4PsPH.Models.Person>

@{
    ViewBag.Title = "Clients";
}

<div class="shadow-wrapper">
    <div class="row">
        <div class="window-heading">
            <div class="col-md-6">
                <div class="links">
                    <strong>
                        @ViewBag.Title
                    </strong>
                </div>
            </div>

            <div class="col-md-3" style="text-align:right;">
                <a href="#" class="btn btn-danger excluded"><font>Show Excluded</font> <span class="glyphicon glyphicon-thumbs-down"></span></a>
            </div>

            <div class="col-md-3" style="text-align:right;">
                <div class="input-group">
                    <input type="text" class="form-control all-search" placeholder="Search All Fields" aria-describedby="basic-addon2">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Household</th>
                <th>City</th>
                <th>Type</th>
                <th>Status</th>
                <th>Age</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr @if (item.IsExcluded) { <text>data-excluded="yes"</text> } else { <text>data-excluded="no"</text> }>
                    <td>@item.LastName, @item.GivenName @item.MiddleName</td>
                    <td><a href="@Url.Action("Details","Households", new { id = item.HouseholdId})">@item.Household.Name</a></td>
                    <td>@item.Household.City.Name</td>
                    <td>
                        @if (item.IsBeneficiary.HasValue)
                        {
                            if (item.IsBeneficiary.Value)
                            {
                                <text>Beneficiary</text>
                            }
                        }
                        @if (item.IsGrantee.HasValue && item.IsBeneficiary.HasValue)
                        {
                            if (item.IsGrantee.Value && item.IsBeneficiary.Value)
                            {
                                <text> / </text>
                            }
                        }
                        @if (item.IsGrantee.HasValue)
                        {
                            if (item.IsGrantee.Value)
                            {
                                <font style="color:#ffd800">Grantee</font>
                            }
                        }
                    </td>
                    <td>
                        @if (item.IsExcluded)
                        {
                            <text><font style="color:#EF5350;">Excluded</font></text>
                        }
                        else
                        {
                            <text>Active</text>
                        }
                    </td>
                    <td>@item.getAge()</td>
                    <td style="text-align:right;">
                        <a href="@Url.Action("Create","Tickets",new { id = item.PersonId})" class="btn btn-warning btn-xs">Add Ticket <span class="fa fa-ticket"></span></a>
                        <a href="@Url.Action("Details",new { id = item.PersonId})" class="btn btn-info btn-xs">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            var datatable = $("table").DataTable({
                paging: true,
                "pageLength": 10,
                "dom": "<'row'<'table-window'<'table-responsive'rt>>><'window-footer'<'col-md-6'i><'col-md-6'p>>",
                "columnDefs": [
                    { "orderable": false, "targets": 6 }
                ]
            });

            $(".all-search").keyup(function () {
                datatable.search($(this).val()).draw();
            })

            $(document).on("click", ".excluded", function () {
                $.fn.dataTable.ext.search.pop();
                datatable.draw();

                $.fn.dataTable.ext.search.push(
                  function (settings, data, dataIndex) {
                      return $(datatable.row(dataIndex).node()).attr('data-excluded') == "yes";
                  }
                );
                datatable.draw();

                $(this).removeClass("btn-danger excluded");
                $(this).addClass("btn-primary included");
                $(this).find("span").removeClass("glyphicon-thumbs-down");
                $(this).find("span").addClass("glyphicon-thumbs-up");
                $(this).find("font").html("Show Active");
            });

            $(document).on("click", ".included", function () {
                $.fn.dataTable.ext.search.pop();
                datatable.draw();

                $.fn.dataTable.ext.search.push(
                  function (settings, data, dataIndex) {
                      return $(datatable.row(dataIndex).node()).attr('data-excluded') == "no";
                  }
                );
                datatable.draw();

                $(this).addClass("btn-danger excluded");
                $(this).removeClass("btn-primary included");
                $(this).find("span").addClass("glyphicon-thumbs-down");
                $(this).find("span").removeClass("glyphicon-thumbs-up");
                $(this).find("font").html("Show Excluded");
            });
        });
    </script>
}