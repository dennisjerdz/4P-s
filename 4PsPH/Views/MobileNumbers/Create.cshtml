@model _4PsPH.Models.MobileNumber

@{
    ViewBag.Title = "Mobile Numbers";

    var options = new List<SelectListItem>();
    options.Add(new SelectListItem { Text = "Active", Value = "false" });
}

<div class="row">
    <div class="col-md-4 left-ui">
        <a href="@Url.Action("ClientIndex", new { id = Model.PersonId })" class="outside-link">« Back to List</a>

        <hr class="heading-cut" />
    </div>
</div>

<div class="row">
    <div class="col-md-12" style="padding:0px;">
        <div class="col-md-4" style="padding:0px;">
            <div class="shadow-wrapper">
                <div class="row">
                    <div class="window-heading">
                        <div class="col-md-12">
                            <div class="links">
                                <strong>
                                    @ViewBag.Title &emsp;»&emsp;Add Mobile Number
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="window">
                        <div class="col-md-12">
                            @using (Html.BeginForm("Create", "MobileNumbers", FormMethod.Post, new { @id = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    @Html.HiddenFor(model => model.PersonId)

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Mobile Number</label>
                                            @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Status</label>
                                            @Html.DropDownListFor(model => model.IsDisabled, options, new { @class = "form-control", @readonly = "true" })
                                            @Html.ValidationMessageFor(model => model.IsDisabled, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="window-footer window-footer-btn">
                    <div class="col-md-12" style="text-align:right;">
                        <button class="btn btn-primary" type="submit" form="form">Create</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
