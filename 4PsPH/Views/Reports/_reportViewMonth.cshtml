@model IEnumerable<_4PsPH.Models.Ticket>

<center>
    <h4 style="padding-top:0px; padding-bottom:0px;">
        Report for the month, <strong id="afterReport"></strong>
    </h4>
    <br />
</center>

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th colspan="4"><center>Summary</center></th>
        </tr>
    </thead>

    <thead>
        <tr>
            <th>Category</th>
            <th>Frequency</th>
            <th>Resolved</th>
            <th>Pending</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>Payment</td>
            <td>@Model.Count(m => m.Category.Name == "Payment")</td>
            <td>@Model.Count(m => m.Category.Name == "Payment" && m.Status.Name == "Resolved")</td>
            <td>@Model.Count(m => m.Category.Name == "Payment" && m.Status.Name != "Resolved")</td>
        </tr>

        <tr>
            <td>Compliance Verification</td>
            <td>@Model.Count(m => m.Category.Name == "Compliance Verification")</td>
            <td>@Model.Count(m => m.Category.Name == "Compliance Verification" && m.Status.Name == "Resolved")</td>
            <td>@Model.Count(m => m.Category.Name == "Compliance Verification" && m.Status.Name != "Resolved")</td>
        </tr>

        <tr>
            <td>Exclusion Errors</td>
            <td>@Model.Count(m => m.Category.Name == "Exclusion Errors")</td>
            <td>@Model.Count(m => m.Category.Name == "Exclusion Errors" && m.Status.Name == "Resolved")</td>
            <td>@Model.Count(m => m.Category.Name == "Exclusion Errors" && m.Status.Name != "Resolved")</td>
        </tr>

        <tr>
            <td>Others</td>
            <td>@Model.Count(m => m.Category.Name == "Others")</td>
            <td>@Model.Count(m => m.Category.Name == "Others" && m.Status.Name == "Resolved")</td>
            <td>@Model.Count(m => m.Category.Name == "Others" && m.Status.Name != "Resolved")</td>
        </tr>

        <tr>
            <td></td>
            <td>@Model.Count()</td>
            <td>@Model.Count(m => m.Status.Name == "Resolved")</td>
            <td>@Model.Count(m => m.Status.Name != "Resolved")</td>
        </tr>
    </tbody>
</table>

<br />

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th colspan="7">
                <center>
                    Tickets List
                </center>
            </th>
        </tr>
    </thead>

    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Household ID</th>
            <th>Client ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Status</th>
            <th>Date Created</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model.OrderByDescending(m => m.TicketId))
        {
            <tr>
                <td>Ticket ID</td>
                <td>@x.Person.HouseholdId</td>
                <td>@x.PersonId</td>
                <td>@x.Person.LastName, @x.Person.GivenName</td>
                <td>@x.Category.Name</td>
                <td>
                    @x.Status.Name
                    @if (x.Status.Name == "Resolved")
                    {
                        <button data-toggle="tooltip" title="Resolved by: @x.ResolvedBy on @x.ResolvedDate" class="btn btn-xs"><span class="fa fa-info-circle"></span></button>
                    }
                </td>
                <td>@x.DateTimeCreated.ToString("MM/dd/yy")</td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/Chart.js"></script>

