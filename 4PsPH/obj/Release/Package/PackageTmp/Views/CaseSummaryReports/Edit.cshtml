@model _4PsPH.Models.CaseSummaryReport

@{
    ViewBag.Title = "Case Summary Report";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <a href="@Url.Action("Details","Tickets", new { id = Model.TicketId })" class="outside-link">« Back to Ticket Details</a>

        <hr class="heading-cut" />
    </div>
</div>

<div class="row">
    <div class="col-md-12" style="padding:0px;">
        <div class="col-md-8 col-md-offset-2" style="padding:0px;">
            <div class="shadow-wrapper">
                <div class="row">
                    <div class="window-heading">
                        <div class="col-md-12">
                            <div class="links">
                                <strong>
                                    @ViewBag.Title &emsp;»&emsp;Case Summary Report for Ticket Number @Model.TicketId ( @Model.Ticket.Person.getFullName() )
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @using (Html.BeginForm("Edit", "CaseSummaryReports", FormMethod.Post, new { @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model=>model.CaseSummaryReportId)
                        @Html.HiddenFor(model => model.TicketId)
                        @Html.HiddenFor(model => model.DateTimeCreated)
                        @Html.HiddenFor(model => model.LastUpdated)
                        @Html.HiddenFor(model => model.DateTimeApproved)
                        @Html.HiddenFor(model => model.IsApproved)

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.TicketId)

                            <div class="form-group" style="margin-bottom:0px;">
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="window-footer window-footer-btn">
                    <div class="col-md-12" style="text-align:right;">
                        <button class="btn btn-primary" type="submit" form="form">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles{
    <style>
        .mce-panel {
            border:none !important;
        }
    </style>
}

@section scripts{
    <script src="@Url.Content("~/Content/tinymce/tinymce.min.js")"></script>
    <script>
        tinymce.init({
            selector: '#Body',
            height: 100,
            menubar: false,
            plugins: [
              'advlist autolink lists link charmap print preview anchor',
              'searchreplace visualblocks fullscreen',
              'insertdatetime media table contextmenu table'
            ],
            toolbar: 'undo redo | insert | styleselect | bold italic | bullist numlist | link | table',
        });
    </script>
}